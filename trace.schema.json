{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://lbinria.com/traceentry.schema.json",
  "title": "TraceEntry",
  "description": "An entry in a trace",
  "type": "object",
  "properties": {
    "clock": {
      "description": "The timestamp of the event",
      "type": "integer",
      "minimum": 0
    },
    "rmState": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "op": {
            "type": "string"
          },
          "path": {
            "type": "array"
          },
          "args": {
            "type": "array"
          }
        },
        "required": [ "op", "path", "args"]
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "event": {
      "description": "Name of the event",
      "type": "string"
    },
    "args": {
      "type": "array"
    }
    
  },
  "required": [ "clock"]
}

